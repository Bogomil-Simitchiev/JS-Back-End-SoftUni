<main>
    <section class="py-5 details" id="trip-details-page">
        <div class="container">
            <div class="destination">
                <div>
                    <span class="icon"><i class="fas fa-map-marked-alt"></i></span>
                    <h5> from <span>{{offer.start}}</span> to <span>{{offer.end}}</span> </h5>
                </div>
                <div>
                    <span class="icon"><i class="fas fa-calendar-alt"></i></span>
                    <h5> <span>{{offer.date}}</span> at <span>{{offer.time}}</span> </h5>
                </div>
            </div>
            <p class="line"></p>
            <div class="buddies-info">
                <i class="fas fa-users buddies"></i>
                <h5>Shared trip Buddies</h5>
                <div>
                    {{#if tripers}}
                    <!-- if there are joined buddies for the current trip separate them with comma and space", " -->
                    <p>{{tripers}}</p>
                    {{else}}
                    <!-- If not display: -->
                    <p>there are no buddies yet...</p>
                    {{/if}}
                </div>
                <h5>Driver: <span>{{ownerOfTheOffer.email}}</span> </h5>
            </div>
            <p class="line"></p>
            <h5 class="brand">Car Brand: <span class="lead">{{offer.carBrand}}</span></h5>
            <div class="trip-info">
                <div>
                    <img class="img-fluid rounded" src="{{offer.carImage}}" alt="car-image">
                </div>
                <div class="trip-desc">
                    <h5>Information about the trip</h5>
                    <textarea class="lead" disabled>{{offer.description}}</textarea>
                    <br>
                    <br>
                    <h5>Price: <span class="lead">{{offer.price}}</span> BGN</h5>

                    <!-- if there are no logged in user do not show div with class actions  -->
                    {{#if isThereUser}}
                    <div class="actions">
                        {{#if isUserTheCreator}}
                        <!-- Only for logged user and creator to this trip -->
                        <a href="/delete/{{offer._id}}" class="btn btn-danger">Delete this trip</a>
                        <a href="/edit/{{offer._id}}" class="btn btn-warning">Edit this trip</a>

                        {{else}}
                        {{#if isTheUserJoined}}
                        <!-- logged in user and has already joined the trip  -->
                        <span class="btn btn-info">Already joined. Don't be late!</span>

                        {{else}}
                        {{#if availableSeats}}
                        <!-- logged in user with available seats -->
                        <a href="/join/{{offer._id}}" class="btn btn-join">Join now, [ {{availableSeats}} ] seats
                            left!</a>
                        {{else}}
                        <!-- logged in user with no available seats -->
                        <span class="btn btn-secondary">No seats available! [ 0 ]</span>
                        {{/if}}
                        {{/if}}


                        {{/if}}
                    </div>
                    {{else}}

                    {{/if}}

                </div>
            </div>
        </div>
    </section>
</main>