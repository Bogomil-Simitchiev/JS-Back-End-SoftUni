<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{cryptoOffer.imageUrl}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{cryptoOffer.name}}</h1>
            <h3 id="payment">Payment method: {{cryptoOffer.payment}}</h3>
            <p id="price"><span>Price: ${{cryptoOffer.price}}</span></p>
            <p id="description">{{cryptoOffer.description}}</p>
        </div>
        <div class="product-btn">
            {{#if cryptoOffer.isLoggedin}}
            {{#if cryptoOffer.isOwner}}
            <!--Only for registered user and author of the publication -->
            <div class="author">
                <a href="/edit/{{cryptoOffer.id}}" class="btn-edit">Edit</a>
                <a href="/delete/{{cryptoOffer.id}}" class="btn-delete">Delete</a>
            </div>
            {{else}}

            {{#if cryptoOffer.boughtCrypto}}
            <!-- Logged in user who has already buy this crypto-->
            <p class="buy-message">You already bought these crypto coins.</p>
            
            {{else}}
            <!-- Logged in user who has not yet buy this crypto-->
            <a href="/buy/{{cryptoOffer.id}}" class="btn-buy">Buy</a>

            {{/if}}

            {{/if}}

            {{/if}}
        </div>
    </div>
</section>